<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lee.xqq"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14"
        tools:ignore="OldTargetApi" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.lee.xqq.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/quantum_logo_hangouts_color_44in48"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.lee.xqq.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lee.xqq.ChatActivity"
            android:label="@string/title_activity_chat" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lee.xqq.base.BaseActivity" />
        </activity>
        <activity
            android:name="com.lee.xqq.MainActivity"
            android:label="@string/title_activity_splash" >
        </activity>
    </application>

</manifest>